<h1> Application for adoption </h1>
<%= form_with url: "/applications/create", method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :street %>
  <%= f.text_field :street %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip_code %>
  <%= f.text_field :zip_code %>

  <%= f.label "Why would you be a good pet owner?" %>
  <%= f.text_field :description %>

  <%= f.submit "Submit" %>
<% end %>
